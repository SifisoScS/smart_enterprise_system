# Smart Enterprise Management System - Environment Configuration
# Copy this file to .env and update with your actual values

# ===== APPLICATION SETTINGS =====
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-development-secret-key-change-in-production
SERVER_NAME=localhost:5001

# ===== DATABASE CONFIGURATION =====
# Development (SQLite)
DATABASE_URL=sqlite:///../database/development.db

# Production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/sems_production

# ===== AUTHENTICATION & SECURITY =====
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# ===== EMAIL CONFIGURATION =====
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@yourapp.com

# ===== FILE STORAGE =====
# Local storage (development)
UPLOAD_FOLDER=../uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Azure Blob Storage (production)
# AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
# AZURE_STORAGE_CONTAINER=uploads

# ===== CACHE & SESSIONS =====
REDIS_URL=redis://localhost:6379/0

# ===== CORS SETTINGS =====
CORS_ORIGINS=http://localhost:5000,http://localhost:3000

# ===== MONITORING =====
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn

# ===== EXTERNAL SERVICES =====
# Azure Cognitive Services (optional)
# AZURE_COGNITIVE_KEY=your-azure-cognitive-key
# AZURE_COGNITIVE_ENDPOINT=your-azure-cognitive-endpoint